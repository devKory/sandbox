{
	"name": "nodejs-typescript",
	"version": "1.0.0",
	"description": "Node.js starter template using TypeScript",
	"main": "dist/index.js",
	"scripts": {
		"build": "rimraf dist && tsc",
		"predev": "npm run build",
		"dev": "NODE_ENV=development concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
		"preprod": "npm run build",
		"prod": "NODE_ENV=production node dist/index.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/KoryHoopes/sandbox/tree/main/nodejs/nodejs-typescript"
	},
	"author": "Kory Hoopes",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/KoryHoopes/sandbox/issues"
	},
	"dependencies": {
		"@types/node": "^16.11.11",
		"rimraf": "^3.0.2"
	},
	"devDependencies": {
		"concurrently": "^6.4.0",
		"nodemon": "^2.0.15",
		"typescript": "^4.5.2"
	}
}
